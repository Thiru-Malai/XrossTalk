<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardBackgroundColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp">

            <Button
                android:id="@+id/connect_decline"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:backgroundTint="@color/ignore"
                android:fontFamily="@font/montserrat"
                android:text="Decline"
                android:textColor="@color/black"
                android:textSize="6sp" />

            <Button
                android:id="@+id/follow_connect"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_toLeftOf="@id/connect_decline"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:backgroundTint="@color/orange"
                android:fontFamily="@font/montserrat"
                android:text="Connect+"

                android:textColor="@color/black"
                android:textSize="6sp" />

            <TextView
                android:id="@+id/txttagonlayouts"
                android:background="@drawable/stroke_background"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:paddingHorizontal="10dp"
                android:layout_toRightOf="@id/usernameconnect"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/investigator"
                android:textColor="@color/loyalist"
                android:textSize="7sp"
                app:cornerRadius="36dp" />

            <TextView
                android:id="@+id/popularity_text_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/usernameconnect"
                android:layout_toRightOf="@id/profile_pic_users_connect"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/montserrat"
                android:text="Has sent you a connection request"
                android:textColor="#FFFFFF"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/usernameconnect"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/profile_pic_users_connect"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:text="@string/neha_dupia"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_pic_users_connect"
                android:layout_width="49dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>