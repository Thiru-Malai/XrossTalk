<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_user_userfrag"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/userimageicon" />


    <TextView
        android:id="@+id/username_userfrag"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/image_user_userfrag"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="User Name"
        android:textColor="@color/white"
        android:textSize="18sp" />


    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/image_online"
        android:visibility="gone"
        android:layout_marginLeft="-15dp"
        android:src="@color/green"
        android:layout_below="@id/username_userfrag"
        android:layout_toEndOf="@id/image_user_userfrag"
        android:layout_toRightOf="@id/image_user_userfrag" />


    <ImageView
        android:id="@+id/image_offline"
        android:layout_width="29dp"
        android:layout_height="29dp"

        android:layout_below="@id/username_userfrag"
        android:layout_alignEnd="@+id/image_user_userfrag"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-15dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="41dp"
        android:layout_toEndOf="@id/image_user_userfrag"
        android:layout_toRightOf="@id/image_user_userfrag"
        android:src="@color/white"
        android:visibility="gone" />


    <TextView
        android:id="@+id/lastMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/username_userfrag"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/montserrat"
        android:text="Popularity:"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/lastMessage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/username_userfrag"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat"
        android:text="NEW"
        android:textColor="@color/orange"
        android:textSize="12sp"

        android:textStyle="bold" />

    <TextView
        android:id="@+id/txttagonlayouts"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/username_userfrag"
        android:background="@drawable/stroke_background"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/say_hi_btn"
        android:layout_width="24dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.512"
        app:srcCompat="@drawable/ic_baseline_pan_tool_24" />

    <TextView
        android:id="@+id/say_hi_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/say_hi_btn"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="-7dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/say_hi_"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <Button
        android:id="@+id/ignore_chat"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="-1dp"
        android:backgroundTint="@color/ignore"
        android:text="@string/ignore"
        android:background="@color/angryredright"
        android:textColor="@color/white"
        android:textSize="8sp" />


</RelativeLayout>