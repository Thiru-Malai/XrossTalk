<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/editprofile"
    tools:context=".Login.EditProfile">

    <RelativeLayout
        android:id="@+id/imageHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnPrev"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/group_556" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgUpload"
            android:layout_width="166dp"
            android:layout_height="164dp"
            android:layout_centerInParent="true"
            android:background="@drawable/group_556"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            app:srcCompat="@drawable/user_icon" />


    </RelativeLayout>

    <ImageView
        android:layout_width="72dp"
        android:layout_height="43dp"
        android:layout_above="@+id/btnTag"
        android:id="@+id/image_edit"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="285dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="73dp"
        android:src="@drawable/ic_baseline_camera_alt_24">

    </ImageView>

    <ImageView
        android:id="@+id/btnPrev"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_button_24" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/btnPrev"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="@string/profile"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"

        android:layout_marginStart="135dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="35dp"
        android:layout_toEndOf="@+id/textView22"
        android:fontFamily="@font/montserrat"
        android:text="@string/save"
        android:textSize="10sp"
        tools:ignore="TouchTargetSizeCheck" />


    <EditText
        android:id="@+id/txtEditName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageHolder"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/montserrat"
        android:text="@string/thedharshan"
        android:drawableRight="@drawable/ic_baseline_edit_24"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/btnTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtEditName"
        android:fontFamily="@font/montserrat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/stroke_background"
        android:drawableRight="@drawable/ic_baseline_edit_24"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:text="@string/helper"
        android:textAlignment="center"
        android:textSize="17sp" />

    <RelativeLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="wrap_content"
        android:layout_height="167dp"

        android:layout_below="@id/btnTag"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/aboutprofile">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="106dp"
            android:layout_height="58dp"
            android:fontFamily="@font/montserrat"
            android:padding="16dp"
            android:text="@string/aboutprofile"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtEditAbout"
            android:layout_width="match_parent"
            android:layout_height="118dp"
            android:layout_below="@+id/textView7"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="-17dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/montserrat"
            android:padding="15dp"
            android:scrollbars="vertical"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="656dp"
        android:layout_marginBottom="25dp"
        android:orientation="horizontal"
        android:paddingHorizontal="25dp">

        <RelativeLayout
            android:id="@+id/popularityLayout"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="26dp"
            android:background="@drawable/profileconnections"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/txtPopularity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/montserrat"
                android:text="@string/popularity"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/pops"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txtPopularity"
                android:layout_centerInParent="true"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/montserrat"
                android:text="19"
                android:textColor="@color/orange"
                android:textSize="25sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/connectionView"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@drawable/profileconnections"
            android:paddingHorizontal="15dp"

            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/txtConnectionsedit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/textView19"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/montserrat"
                android:text="19"
                android:textColor="#FFFFFF"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/montserrat"
                android:text="@string/connections"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>